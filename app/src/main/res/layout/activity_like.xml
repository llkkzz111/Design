<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LikeActivity">

    <com.liuz.design.view.ExpandTextView
        android:id="@+id/txtShareNewsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dip"
        android:textSize="18sp"
        android:text="1、据法制日报报道，同济大学同济区块链研究院(苏州)院长马小峰认为，区块链技术通过其防篡改、防丢失。"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ellipsize = end"
        android:textColor="#ff0f0f"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:lineSpacingExtra="4dip"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="1、据法制日报报道，同济大学同济区块链研究院(苏州)院长马小峰认为，区块链技术通过其防篡改、防丢失。"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ellipsize = null"
        android:textColor="#0f0fff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:lineSpacingExtra="4dip"
        android:maxLines="2"
        android:text="1、据法制日报报道，同济大学同济区块链研究院(苏州)院长马小峰认为，区块链技术通过其防篡改、防丢失。"/>
</LinearLayout>